const width = $(window).width();
const form = $('.contact-form');

if (width >= 960) {
  $('.contact-form-open').addClass("animated fadeOut");
  setTimeout(function() {
    $(form).removeClass("open").addClass("close");
  }, 300);

  setTimeout(function() {
    $('.contact-info').css("display", "block");
    $('.contact-form-info').css("display", "block");
  }, 1100);
}

$(".email_confirmation").addClass("active");
setTimeout(function() {
  $(".email_confirmation").removeClass("active");
}, 5000);
